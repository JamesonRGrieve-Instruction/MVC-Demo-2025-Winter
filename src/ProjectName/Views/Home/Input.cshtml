@{
    ViewData["Title"] = "Mad Lib Input";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" action="/Home/MadLibOutput">
    <div>
        <label for="userName">Your Name:</label>
        <input type="text" id="userName" name="userName" required />
    </div>
    <div>
        <label for="townName">Town or City:</label>
        <input type="text" id="townName" name="townName" required />
    </div>
    <div>
        <label for="foodType">Type of Food:</label>
        <input type="text" id="foodType" name="foodType" required />
    </div>
    <div>
        <label for="footwearType">Type of Footwear:</label>
        <input type="text" id="footwearType" name="footwearType" required />
    </div>
    <div>
        <label for="vehicleType">Type of Vehicle:</label>
        <input type="text" id="vehicleType" name="vehicleType" required />
    </div>
    <div>
        <label for="colorName">Color:</label>
        <input type="text" id="colorName" name="colorName" required />
    </div>
    <button type="submit">Create Mad Lib</button>
</form>